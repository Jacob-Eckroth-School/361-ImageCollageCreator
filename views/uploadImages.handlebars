
{{#section 'head'}}
 
    <script src="/imageDisplayTemplate.js"></script>
   
    <link rel="stylesheet" href="/images.css" />
    <link  href="/cropperjs/cropper.css" rel="stylesheet">
    <script src="/cropperjs/cropper.js" defer></script>
     <script src="/imageUploadingScript.js" defer></script>
    <title>Upload Images</title>
    
{{/section}}

    <div id="mainHolder">
        <div id="photoHolder">
            <h2 class="imagesHeader">Previously Uploaded Images</h2>
        </div>
   
    <div id="contentHolder">
        <h1><a class="homePageLink" href="/" title="Return to Home Page">Collage Generator</a></h1>
          {{> collageTitle}}

        <p class="descriptionText">Great! Now you need to upload some images! You will need
            at least one.
        </p>
  

        <form method="POST" action="/upload-profile-pic" enctype="multipart/form-data">
    <div>
        <label>Select your profile picture:</label>
        <input type="file" name="profile_pic" />
    </div>
    <div>
        <input type="submit" name="btn_upload_profile_pic" value="Upload" />
    </div>
</form>

<form method="POST" action="/upload-multiple-images" enctype="multipart/form-data">
    <div>
        <label>Select multiple images:</label>
        <input type="file" name="multiple_images" multiple />
    </div>
    <div>
        <input type="submit" name="btn_upload_multiple_images" value="Upload" />
    </div>
</form>

    
        <div>
             <img id="image" src="https://placekitten.com/200/300">
        </div>



    </div>
    
 </div>





